            <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3" id="reservation">         <h2 style="text-align:center;">#Réservation</h2>
                   

                {% if reserv_error is defined and reserv_error is not empty %}
                    <div class='alert alert-danger' > {{ reserv_error }} </div>
                {% endif %}
                 <h4 class="text-center clearfix">Vos identifiants</h4>
                <form role="form" class="wowload fadeInRight" method="post">
                    <input type="hidden" name="user_id" value="{% if id_user is defined %}{{ id_user }} {% endif %}">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nom" placeholder="Nom" value="{% if nom is defined %}{{ nom }}{% endif %}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="prenom" placeholder="Prénom" value="{% if prenom is defined %}{{ prenom }}{% endif %}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="E-mail" value="{% if email is defined %}{{ email }}{% endif %}">
                    </div>        
                    <hr></hr>
                    <div class="form-group">
                        <h4 class="text-center">Votre chambre</h4>
                        <div class="row">
                            <div class="col-xs-12">
                                <select class="form-control" name="id_categorie1">
                                    <option value="0" {% if categorie is not defined %}selected="selected"{% endif %}>Catégorie de chambre</option>
                                    <option value="1" {% if categorie is defined and categorie == '1' %}selected="selected"{% endif %}>Standard</option>
                                    <option value="2" {% if categorie is defined and categorie == '2' %} selected="selected"{% endif %}>Supérieure</option>
                                    <option value="3" {% if categorie is defined and categorie == '3' %}selected="selected"{% endif %}>Luxe</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">        
                            <div class="col-xs-12">
                                <select class="form-control" name="nb_personne1">
                                    <option value="0" {% if nbPersonne is not defined %}selected="selected"{% endif %}>
                                        Nombre de personne(s)
                                    </option>
                                    <option {% if nbPersonne is defined and nbPersonne == '1' %}selected="selected"{% endif %}>
                                        1
                                    </option>
                                    <option {% if nbPersonne is defined and nbPersonne == '2' %}selected="selected"{% endif %}>
                                        2
                                    </option>
                                    <option {% if nbPersonne is defined and nbPersonne == '3' %}selected="selected"{% endif %}>
                                        3
                                    </option>
                                    <option {% if nbPersonne is defined and nbPersonne == '4' %}selected="selected"{% endif %}>
                                        4
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Date d'arrivée :</p>
                                <input type="date" class="form-control" name="date_debut1" {% if date_debut is defined%}value="{{ date_debut }}"{% endif %} >
                            </div>
                            <div class="col-md-2"></div>
                            <div class="col-md-5">
                                <p>Date de départ :</p>
                                <input type="date" class="form-control" name="date_fin1" {% if date_fin is defined%}value="{{ date_fin }}"{% endif %}>
                            </div>
                        </div>
                    </div>

                    <hr></hr>
                    <div class="form-group" id="resaServices">
                        <h4 class="text-center">Services souhaités</h4>
                        {% for index in listService %}
                        {# {{ dump(index) }}  #}
                        <input type="checkbox" name="idserv[]" value="{{index.id_services}}">{{ index.nom_service}} ({{ index.prix_service}} €)<br>
                    
                        {% endfor %}
                    </div>
                    <button class="btn btn-default col-xs-12 col-md-6 col-md-offset-3">Réserver</button>
                </form>    
            </div>
        </div>  
    </div>
</div>
