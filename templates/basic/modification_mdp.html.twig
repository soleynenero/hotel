{% block infoProfil %}
    <div class="col-md-offset-1 col-md-6 infoProfil">
        <form method="post">

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" class="taille_form">
            </div>

            <div class="form-group">
                <label for="mdp">Ancien mot de passe</label>
                <input type="text" class="form-control" id="mdp" name="mdpvieux" class="taille_form">
            </div>

            <div class="form-group">
                <label for="mdp">Nouveau mot de passe</label>
                <input type="text" class="form-control" id="mdp" name="mdp" class="taille_form">
            </div>

            
            <button type="submit" class="btn btn-default col-md-12">Modifier</button><br>

            {% if error is defined %}
                <hr>
                    {{ error }}
                <hr>
            {% endif %}

            {% if msgmodif is defined %}
                <hr>
                    {{ msgmodif }}
                <hr>
            {% endif %}
            
            
        </form>
    </div>
</div>
{% endblock %}

