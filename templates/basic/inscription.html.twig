{% extends "layout.html.twig" %}

{% block menuNav %}
    {% include 'include/menu_nav.html.twig' ignore missing %}
{% endblock %}

{% block content %}
  <div class="container inscription">
  
<form method="post" action="" class="col-md-8 col-md-offset-2">
	<input type="hidden" name="standard">

  
  
  <div class="form-group">
    <label for="nom">Nom</label>
    <input type="text" class="form-control" id="nom" name="nom" placeholder="nom">
  </div>
  <div class="form-group">
    <label for="prenom">Prénom</label>
    <input type="text" class="form-control" id="prenom" name="prenom" placeholder="prenom">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email"  name="email" placeholder="Email">
  </div>
 
 
	
  <div class="form-group"><br>
    <label for="ville">Ville</label>
    <input type="text" class="form-control" id="ville" name="ville" placeholder="ville">
  </div>
  
  <div class="form-group">
    <label for="code_postal">Code Postal</label>
    <input type="text" class="form-control" id="code_postal" name="code_postal" placeholder="Code Postal">
  </div>
  
  <div class="form-group">
    <label for="telephone">Telephone</label>
    <input type="text" class="form-control" id="telephone" name="telephone" placeholder="telephone">
  </div>

  <label for="adresse">Adresse</label>
  <textarea class="form-control" rows="3" id="adresse" name="adresse"></textarea><br>
  
  <div class="form-group">
    <label for="mdp">Password</label>
    <input type="password" class="form-control" id="mdp" name="mdp" placeholder="Password">
  </div>



  <input type="submit" class="col-md-12 " value="inscription"><br><br><br>
</form>
<div>

<small>déjà un compte?
    </small>
    <a href="{{ path('connexion') }}" class="signup">connexion</a>


</div>

</div>  
{% endblock %}