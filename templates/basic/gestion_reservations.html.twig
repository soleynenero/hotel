{% extends "layout_admin.html.twig" %}

{% block content %}
<h3 class="text-center">Gestion des reservations</h3> 
<table class="table table-striped table-hover text-center">
        <tr>
            <th class="text-center">N° commande</th>
            <th class="text-center">Nom complet</th>
            <th class="text-center">N° facture</th>
            <th class="text-center">Date commande</th>
            <th class="text-center">Date d'arrivée</th>
            <th class="text-center">Date départ</th>
            <th class="text-center">Nbr de personne</th>
            <th class="text-center">Modification</th>
        </tr>
        
        {# {% for reservation in reservation %}
            <tr>
            <pre><p>{{dump (reservation )}}</p></pre>
        {% endfor %} #}

        {% for reservation in reservations %}

            <tr>
                <td>{{reservation.id}}</td>
                <td>{{reservation.Nom}}</td>
                <td>{{reservation.NbFacture}}</td>
                <td>{{reservation.date_commande}}</td>
                <td>{{reservation.date_debut | date("d-m-Y")}}</td>
                <td>{{reservation.date_fin | date("d-m-Y")}}</td>
                <td>{{reservation.nb_personne}}</td>
                <td><a href=" {{ path('modif_reservation', { 'id_reservation': reservation.id }) }} "><span class="glyphicon glyphicon-pencil alignement"</span></a></td>
            </tr>
            

        {% endfor %}
        
    </table>
        {% if error is defined %}
            <div class='alert alert-danger text-center' ><p>{{ error|nl2br }}</p></div>
        {% endif %}

        {# {% if errornb is defined %}
            <p>{{ errornb|nl2br }}</p>
        {% endif %} #}
    

    
        {% if msgValidation is defined %}
            <div class='alert alert-success text-center'>{{ msgValidation }} </div>
        {% endif %}
   





{% endblock %}
